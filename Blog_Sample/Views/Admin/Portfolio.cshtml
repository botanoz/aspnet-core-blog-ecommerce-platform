@model IEnumerable<DataLayer.Model.Portfolio>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Portfolio";
    ViewData["ButtonName"] = "Add New Portfolio";
    ViewData["Reads"] = "Reads";
    ViewData["TableName"] = "Portfolio Name";
}

@Html.Partial("_AdminSharedPartialUp")
@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Client</td>
        <td>@item.CreatedDate.ToString()</td>
        <td class="project_progress">@item.Description</td>
        <td class="project-state">@item.Client</td>
        <td class="project-actions text-right">
            <a class="btn btn-primary btn-sm" href="@Url.Action("View", "Admin", new { id = item.Id })">
                <i class="fas fa-folder">
                </i>
                View
            </a>
            <a class="btn btn-info btn-sm" href="@Url.Action("Edit", "Admin", new { id = item.Id })">
                <i class="fas fa-pencil-alt">
                </i>
                Edit
            </a>
            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Admin", new { id = item.Id })">
                <i class="fas fa-trash">
                </i>
                Delete
            </a>
        </td>
    </tr>
}
@Html.Partial("_AdminSharedPartialDown")