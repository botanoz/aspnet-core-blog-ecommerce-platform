@model IEnumerable<DataLayer.Model.Product>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Shop";
}

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="card-tools">
                <button type="button" class="btn btn-outline-primary">
                    Add New Product
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                           Image
                        </th>
                        <th style="width: 30%">
                           Name
                        </th>
                        <th style="width: 8%" class="text-center">
                            Price
                        </th>
                        <th style="width: 8%" class="text-center">
                            Is Active?
                        </th>
                       
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
@foreach (var product in Model)
{
    var buttonClass = product.IsActive ? "btn-success" : "btn-secondary";
    <tr>      
        <td>@product.Id</td>
        <td><img alt="Avatar" class="table-avatar" src="@(Url.Content(product.ImageUrl))"></td>
        <td>@product.Name</td>
        <td class="project_progress">@product.Price $</td>
        <td class="project-state">
            <button class="btn @buttonClass rounded-circle" style="width: 50px; height: 50px; margin: 5px;">
                <i class="fa fa-check"></i>
            </button>
        </td>
        <td class="project-actions text-right">
            <a class="btn btn-primary btn-sm" href="@Url.Action("View", "Admin", new { id = product.Id })">
                <i class="fas fa-folder">
                </i>
                View
            </a>
            <a class="btn btn-info btn-sm" href="@Url.Action("EditShop", "Admin", new { id = product.Id })">
                <i class="fas fa-pencil-alt">
                </i>
                Edit
            </a>
            <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteProduct", "Admin", new { id = product.Id })">
                <i class="fas fa-trash">
                </i>
                Delete
            </a>
        </td>
    </tr>
}
                </tbody>
            </table>
        </div>
      
    </div>
 
</section>